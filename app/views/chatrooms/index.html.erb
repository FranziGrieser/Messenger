<h4 class="ui center aligned medium icon header">
  <i class="circular inverted green comment outline icon"></i>
  Messenger
</h4>
<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content" id="messages">
        <div class="ui feed" id= "message-container">
          <%= render @messages %>
        </div>
      </div>
      <div class="extra content">
        <%= form_for(@message, html: { class: "ui reply form", role: "form" }, url: message_path, remote: true) do |f| %>
           <div class="field">
             <div class="ui right icon input">
               <%= f.text_field :body, placeholder: "Write something", autofocus: true %>
               <%= f.button '<i class="bordered inverted green edit icon"></i>'.html_safe %>
             </div>
           </div>
         <% end  %>
       </div>
    </div>
  </div>
  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="ui list">
        <div class="item">
          <div class="content">
            <div class="active-user">
              Total of Messenger Users: 
              <%= @users.count %><br>
              Currently Active:</br>
              <% @users.each do |user| %>
              <i class="users icon"></i>
                <%= user.username %><br>
              <% end %>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
